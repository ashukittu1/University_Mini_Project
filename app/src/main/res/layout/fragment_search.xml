<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    tools:context="com.ashutech.university_mini_project.SearchFragment">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/logo"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_marginTop="50dp"
    android:layout_gravity="center"
    android:text="Search by name [or] mobile"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T.Name"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:background="@drawable/myshape1"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.16" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:id="@+id/button1" />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T.Cell"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:background="@drawable/myshape1"
            android:id="@+id/editText2"
            android:layout_marginLeft="30dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:id="@+id/button2" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by:"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/telgu_image"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kanad_image"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hindi_image"/>

    </LinearLayout>
</LinearLayout>
